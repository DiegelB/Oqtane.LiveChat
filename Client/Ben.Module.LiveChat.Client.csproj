<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Version>1.0.0</Version>
    <Authors>Ben</Authors>
    <Company>Ben</Company>
    <Description>Live Chat service</Description>
    <Product>Ben.Module.LiveChat</Product>
    <Copyright>Ben</Copyright>
    <AssemblyName>Ben.Module.LiveChat.Client.Oqtane</AssemblyName>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
